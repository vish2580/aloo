# =====================================================
# LuxWin App - Environment Variables Template
# =====================================================
# Copy this file to .env and fill in your actual values
# =====================================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_NAME=luxwin_db

# JWT Secret Keys
JWT_SECRET=your_jwt_secret_key_here_use_random_string
JWT_EXPIRE=7d

# Game Configuration
ROUND_DURATION_SECONDS=180
BET_LOCK_BEFORE_SECONDS=30
MIN_BET_AMOUNT=10
MAX_BET_AMOUNT=10000
BET_TAX_PERCENT=10

# Withdrawal Configuration
MIN_WITHDRAW_AMOUNT=20
WITHDRAW_FEE_PERCENT=10

# Currency
DEFAULT_CURRENCY=USD

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here

# App Configuration
APP_BASE_URL=https://yourdomain.com

# Wallet Configuration
USDT_TRC20_WALLET_ADDRESS=your_usdt_trc20_wallet_address

# Email Configuration (Brevo SMTP)
# Sign up at https://www.brevo.com/ to get SMTP credentials
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_login_email@example.com
SMTP_PASS=your_brevo_smtp_key_here

# Password Reset Configuration
FRONTEND_URL=http://localhost:3000
RESET_TOKEN_EXPIRE_MINUTES=15
